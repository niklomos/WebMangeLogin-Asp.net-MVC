@functions {
    public string IsActive(string controller, string action)
    {
        string currentController = ViewContext.RouteData.Values["Controller"].ToString();
        string currentAction = ViewContext.RouteData.Values["Action"].ToString();

        if ((currentController == controller) && (currentAction == action))
        {
            return "active ";
        }

        return "";
    }
    public string EmpPage()
    {
        return string.Join(" ", IsActive("Home", "Summary"),
        IsActive("Home", "ManageInsertAccount"),
        IsActive("Home", "InsertEmpAccount"),
        IsActive("Home", "UpdateAccount"),
        IsActive("Recycle", "ManageRecycleAccount"),
        IsActive("Recycle", "UpdateRecycleAccount"));
    }
    public string AdmPage()
    {
        return string.Join(" ", IsActive("Home", "ManageAdminAccount"),
        IsActive("Home", "InsertAdminAccount"),
        IsActive("Home", "UpdateAdminAccount"),
        IsActive("Recycle", "ManageRecycleAdminAccount"),
        IsActive("Recycle", "UpdateRecycleAdminAccount"));
    }
    public string ProPage()
    {
        return string.Join(" ", IsActive("Home", "ManageProgram"),
        IsActive("Home", "InsertProgram"),
        IsActive("Home", "UpdateProgram"),
        IsActive("Recycle", "ManageRecycleProgram"),
        IsActive("Recycle", "UpdateRecycleProgram"));
    }
    public string ProfilePage()
    {
        return IsActive("Home", "Profile");

    }
}

