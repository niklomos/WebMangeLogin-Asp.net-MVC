        <script>
            document.getElementById("searchInput").addEventListener("keyup", function () {
                var input, filter, table, tr, th, td, i, j, txtValue;
                input = document.getElementById("searchInput");
                filter = input.value.toUpperCase();
                table = document.getElementsByTagName("table")[0];
                tr = table.getElementsByTagName("tr");
                for (i = 1; i < tr.length; i++) {
                    var found = false; // เพิ่มตัวแปรเพื่อตรวจสอบว่าพบข้อมูลที่ต้องการค้นหาหรือไม่
                    // วนลูปทุกคอลัมน์ในแถว
                    for (j = 0; j < tr[i].getElementsByTagName("th").length; j++) {
                        th = tr[i].getElementsByTagName("th")[j];
                        if (th) {
                            txtValue = th.textContent || th.innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                found = true; // หากพบข้อมูลที่ต้องการค้นหาในคอลัมน์ใดๆ ให้ตั้งค่า found เป็น true
                                break; // ออกจากการวนลูปทันที เนื่องจากพบข้อมูลที่ต้องการค้นหาแล้ว
                            }
                        }
                    }
                    if (!found) {
                        // ถ้าไม่พบในส่วนหัวของตาราง ให้ค้นหาในข้อมูลของแถว
                        for (j = 0; j < tr[i].getElementsByTagName("td").length; j++) {
                            td = tr[i].getElementsByTagName("td")[j];
                            if (td) {
                                txtValue = td.textContent || td.innerText;
                                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                    found = true; // หากพบข้อมูลที่ต้องการค้นหาในคอลัมน์ใดๆ ให้ตั้งค่า found เป็น true
                                    break; // ออกจากการวนลูปทันที เนื่องจากพบข้อมูลที่ต้องการค้นหาแล้ว
                                }
                            }
                        }
                    }
                    if (found) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            });
        </script>


